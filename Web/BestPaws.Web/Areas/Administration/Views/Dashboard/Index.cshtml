@model BestPaws.Web.ViewModels.Users.UserInputModel
@{ this.ViewData["Title"] = "Create Administrator"; }

<form method="post" class="col-6 offset-3 mt-3">
    <h4 class="text-info">@this.ViewData["Title"]</h4>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <textarea asp-for="Email" class="form-control"></textarea>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-info" />
</form>
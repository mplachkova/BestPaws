@model BestPaws.Web.ViewModels.Services.ServiceListViewModel
@{
    this.ViewData["Title"] = "Our services";
}
@*<h2 class="text-info">Our services</h2>*@
    <header class="jumbotron my-3">
        <img class="img-fluid" src="~/img/image.jpg" alt="Our Services"/>
        <h3 class="text-center">Our Services</h3>
    </header>
@if (TempData.ContainsKey("Message"))
{
    <div class="container alert alert-secondary alert-dismissible fade show text-center col-md-7 p-3 mb-5" role="alert">
        @this.TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="d-flex flex-fill">
    <div class="row my-lg-5">
        @foreach (var service in this.Model.Services)
        {
            <div class="col-md-6">
                <div class="card m-2">
                    <div class="card-header">
                        <img class="card-img" src="assets/img/dog-1.jpg" alt="Service">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title mt-0">@service.Name</h4>
                        <p class="card-text">@service.Description </p>
                    </div>
                    <div class="card-footer">
                        <a href="#a" class="btn btn-outline-info">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>